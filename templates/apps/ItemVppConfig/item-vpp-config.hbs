{{log "item-vpp-application" this}}
<section>
    <div class="flexrow">

        {{!-- Available SELECT --}}
        <div class="">
            <h3>Available Slots</h3>
            <select style="height:auto" id="vppUnSlotted" class="form-control" size="10" multiple="multiple">
                {{#each vppUnSlottedItems}}
                    <option value="{{this.id}}" title="{{this.system.description}}">{{this.realCost}}: {{this.name}}</option>
                {{/each}}
            </select>
        </div>

        {{!-- Controls --}}    
        <div class="flexcol flex0" style="">
            <button type="button" id="rightSelected" class="vpp-select-control"><i class="fa-solid fa-chevron-right"></i></button>
            <button type="button" id="leftSelected" class="vpp-select-control"><i class="fa-solid fa-chevron-left"></i></button>
            <button type="button" id="reset" class="vpp-select-control">reset</button>
        </div>

        {{!-- Active SELECT --}}    
        <div class="">
            <h3>VPP Slots</h3>
                <select style="height:auto" id="vppSlotted" class="form-control" size="10" multiple="multiple">
                {{#each vppSlottedItems}}
                    <option value="{{this.id}}" title="{{this.system.description}}">{{this.realCost}}: {{this.name}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <h3>
        <center>
            Pool Points <b>{{vppSlottedCost}}</b> of {{vppPoolPoints}}
        </center>
    </h3>
</section>