<form>
    <div class="hero chat-card item-card skill-card" data-actor-id="{{actor._id}}" data-item-id="{{item._id}}" {{#if
        tokenId}}data-token-id="{{tokenId}}" {{/if}}>
        <header class="card-header flexrow">
            <img src="{{item.img}}" title="{{item.name}}" width="36" height="36" />
            <h3 class="item-name">{{{itemName item}}}</h3>
        </header>
    </div>

    <div class="form-group">
        <label>Roll Modifier<br>(- is harder, + is easier)</label>
        <input type="number" name="mod" value="0" />
    </div>

    {{#if skillMods.length}}
        <div class="form-group">
        <label>Skill Modifiers</label>
            <table>
                {{#each skillMods}}
                    {{#if this.system.active}}
                        <tr>
                            <td style="width:1%">
                                <input class="item-toggle" data-item-id="{{this.id}}" type="checkbox" {{checked
                                this.system.checked}} data-dtype="Boolean"/>
                            </td>
                            <td style="text-align:left">
                                {{this.system.description}}
                            </td>
                        </tr>   
                    {{else}}
                        <tr title="This power is inactive" style="opacity:50%">
                            <td>
                                <i class="fas fa-ban"></i>
                            </td>
                            <td style="text-align:left">
                                {{this.system.description}}
                            </td>
                        </tr>
                    {{/if}}   
                {{/each}}
            </table>
        </div>
    {{/if}}
</form>