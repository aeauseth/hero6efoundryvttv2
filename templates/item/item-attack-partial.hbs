<div class="form-group">
    <label>{{localize "Items.Attack.Class"}}</label>
    <select name="system.class" data-dtype="text">
        {{selectOptions config.attackClasses selected=system.class}}
    </select>
</div>

<div class="form-group">
    <label>{{localize "Items.Attack.OcvMod"}}</label>
    <input type="text" name="system.ocv" value="{{system.ocv}}" data-dtype="Number" />
</div>

<div class="form-group">
    <label>{{localize "Items.Attack.DcvMod"}}</label>
    <input type="text" name="system.dcv" value="{{system.dcv}}" data-dtype="Number" />
</div>

<div class="form-group">
    <label>{{localize "Items.Attack.DC"}}</label>
    <input type="text" name="system.DC" value="{{system.DC}}" data-dtype="Number" />
</div>

<div class="form-group">
    <label>{{localize "Items.Attack.KillingAttack"}}</label>
    <input type="checkbox" name="system.doesKillingDamage" {{checked system.doesKillingDamage}} data-dtype="Boolean" />
</div>

<div class="form-group">
    <label>{{localize "Items.Attack.Piercing"}}</label>
    <input type="text" name="system.piercing" value="{{system.piercing}}" data-dtype="Number" />
</div>

<div class="form-group">
    <label>{{localize "Items.Attack.Penetrating"}}</label>
    <input type="text" name="system.penetrating" value="{{system.penetrating}}" data-dtype="Number" />
</div>

<div class="form-group">
    <label>{{localize "Items.Attack.StunBodyDamage"}}</label>

    <select name="system.stunBodyDamage" data-dtype="text">
        {{selectOptions config.stunBodyDamages selected=system.stunBodyDamage}}
    </select>
</div>

<div class="form-group">
    <label>{{localize "Items.Attack.TargetsUsing"}}</label>
    <select name="system.uses" data-dtype="text">
        {{selectOptions config.attacksWith selected=system.uses}}
    </select>
</div>

<div class="form-group">
    <label>{{localize "Items.Attack.AvoidedBy"}}</label>
    <select name="system.targets" data-dtype="text">
        {{selectOptions config.defendsWith selected=system.targets}}
    </select>
</div>


<div class="form-group">
    <label>{{localize "Items.Attack.DoesKnockback"}}</label>
    {{#if config.knockbackMultiplier}}
        <select name="system.knockbackMultiplier" data-dtype="text">
            {{selectOptions config.knockbackMultiplier selected=system.knockbackMultiplier}}
        </select>
    {{else}}
        <input type="text" disabled/>
    {{/if}}
</div>


<div class="form-group">
    <label>{{localize "Items.Attack.UsesStrength"}}</label>
    <input type="checkbox" name="system.usesStrength" {{checked system.usesStrength}} data-dtype="Boolean" />
</div>

<div class="form-group">
    <label>{{localize "Items.Attack.UsesTk"}}</label>
    <input type="checkbox" name="system.usesTk" {{checked system.usesTk}} data-dtype="Boolean" />
</div>

<div class="form-group">
    <label>{{localize "Items.Attack.NoHitLocations"}}</label>
    <input type="checkbox" name="system.noHitLocations" {{checked system.noHitLocations}} data-dtype="Boolean" />
</div>


<div class="form-group">
    <label>{{localize "Items.Attack.AreaOfEffect"}}</label>
    <select name="system.areaOfEffect.type" data-dtype="text">
        {{selectOptions config.areaOfEffect.types selected=system.areaOfEffect.type}}
    </select>
    <label style="margin-left: 10px;">{{localize "Items.Attack.Value"}}</label>
    <input type="text" name="system.areaOfEffect.value" value="{{system.areaOfEffect.value}}" data-dtype="Number" />
</div>


<div class="form-group">
    <label>{{localize "Items.Attack.CustomEffects"}}</label>
    <textarea
        placeholder="Attack Description"
        class="power-card-power-description textarea input"
        name="system.effect"
    >{{item.system.effect}}</textarea>

</div>
