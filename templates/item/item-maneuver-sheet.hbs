{{log "HEROSYS ITEM MANEUVER SHEET" this}}
<form class="{{cssClass}}" autocomplete="off" data-id="{{item._id}}" data-realId="{{item.system.realId}}">
    <header class="sheet-header">
        <img class="profile-img" name="img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
        <div class="header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
        </div>
    </header>

    {{! Sheet Body }}
    <section class="sheet-body">
        <div class="description">
            {{system.description}}
            {{#if system.NOTES}}
                <div class="item-notes-elidable-content"><b>Notes:</b> {{{system.NOTES}}}</div>
            {{/if}}
        </div>
        <div class="form-group">
            <label>Phase</label>
            <input type="text" name="system.PHASE" value="{{system.phase}}" data-dtype="text" />
        </div>
        <div class="form-group">
            <label>OCV Modifier</label>
            <input type="text" name="system.OCV" value="{{system.ocv}}" data-dtype="text" />
        </div>
        <div class="form-group">
            <label>DCV Modifier</label>
            <input type="text" name="system.DCV" value="{{system.dcv}}" data-dtype="text" />
        </div>
        <div class="form-group">
            <label>Effects</label>
            <input type="text" name="system.EFFECT" value="{{system.EFFECT}}" data-dtype="text" />
        </div>
    </section>
</form>